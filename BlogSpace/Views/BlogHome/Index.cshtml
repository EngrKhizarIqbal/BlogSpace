@model IEnumerable<Blog>
@{
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
    ViewBag.Title = "Index";
    var top10Blogs = ViewBag.top10Blogs as List<Blog>;
}

<!--header-->
<div class="header-bottom">
    <div class="container">
        <div class="logo wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
            <h1><a href="@Url.RouteUrl("blogHome", new { pageNo = 0 })">BLOG SPACE!</a></h1>
            <p><label class="of"></label>LET'S MAKE A PERFECT STYLE<label class="on"></label></p>
        </div>
    </div>
</div>
<!--//header-->

<div class="technology">
    <div class="container">
        <!-- technology-left -->
        <div class="col-md-9 technology-left">
            <div class="tech-no">
                @if (Model.Count() > 0)
                {
                    foreach (var blog in Model)
                    {
                        <div class="wthree">
                            <div class="col-md-6 wthree-left wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                                <div class="tch-img">
                                    <a href="@Url.RouteUrl("ViewBlogDetails", new
                                { blogUrlFriendlyName = blog.PageFriendlyUrlTitle })">
                                        <img src="~/Images/BlogImages/@blog.ImageName" class="img-responsive" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6 wthree-right wow fadeInDown" data-wow-duration=".8s" data-wow-delay=".2s">
                                <h3>
                                    <a href="@Url.RouteUrl("ViewBlogDetails", new
                                { blogUrlFriendlyName = blog.PageFriendlyUrlTitle })">@blog.Title</a>
                            </h3>
                            <h6>Published On @blog.PublishedOn.</h6>
                            <p>@blog.ShortDescription</p>
                            <div class="bht1">
                                <a href="@Url.RouteUrl("ViewBlogDetails", new
                                        { blogUrlFriendlyName = blog.PageFriendlyUrlTitle })">Read More</a>
                            </div>
                            <div class="soci">
                                <ul>

                                    <li class="hvr-rectangle-out"><a class="twit" href="#"></a></li>
                                    <li class="hvr-rectangle-out"><a class="pin" href="#"></a></li>
                                </ul>
                            </div>
                            <div class="clearfix"></div>

                        </div>
                        <div class="clearfix"></div>
                    </div>
                }
                <div class="bht1" style="float: none; display: block; margin-bottom: 10px;">
                    <a href="@Url.RouteUrl("blogHome", new { pageNo = ((int)ViewBag.pageNo + 1) })">Load More...</a>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    <h2 id="h2-bootstrap-heading">
                        Sorry, You are reached at<br />the end of the world of internet.
                    </h2>
                </div>

                <div class="alert alert-success text-center" role="alert">
                    <h2 id="h4-bootstrap-heading">
                        Click <a href="@Url.RouteUrl("blogHome")">Here</a> to navigate to the home page.
                    </h2>
                </div>
            }
            </div>
        </div>
        <!-- // technology-left -->
        @Html.Partial("_PopularPostRightSide", top10Blogs)
    </div>
</div>
